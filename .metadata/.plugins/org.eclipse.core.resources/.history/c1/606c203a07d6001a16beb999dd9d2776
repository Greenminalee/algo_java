package algo;

import java.util.Scanner;

public class Algo24 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int N = scan.nextInt();
		int[] array = new int[N];
		for (int i = 0; i < N; i++)
		{
			array[i] = scan.nextInt();
		}
		solution(array);
	}
	
	static int solution(int[] array)
	{
		int rule = 0;
		if (array[1] - array[0] == array[2] - array[1]) 
			rule = array[1] - array[0];
		else
			rule = array[1] / array[0]
		return (0);
	}
}
